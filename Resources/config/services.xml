<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="la_fourchette_soap.soap_client.adobe_builder" class="LaFourchette\AdobeCampaignClientBundle\SoapClient\SoapClientAdobeBuilder"
/>
        <service id="la_fourchette_soap.client"
                 class="LaFourchette\AdobeCampaignClientBundle\SoapClient\Client"
                 factory-service="la_fourchette_soap.soap_client.adobe_builder"
                 factory-method="build">
            <argument type="service" id="la_fourchette_soap.client.session" />
            <argument type="service" id="la_fourchette_soap.client.recipient" />
        </service>
    </services>
</container>
