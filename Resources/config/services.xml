<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="la_fourchette_adobe_client.instantiator.client" class="LaFourchette\AdobeCampaignClientBundle\Client\ClientInstantiator"/>

        <service id="la_fourchette_adobe_client.creator.token" class="LaFourchette\AdobeCampaignClientBundle\Client\TokenCreator">
            <argument type="service" id="la_fourchette_adobe_client.instantiator.client"/>
            <argument>%adobe_campaign_client.configuration%</argument>
        </service>

        <service id="la_fourchette_adobe_client.provider.token" class="LaFourchette\AdobeCampaignClientBundle\Client\TokenProvider">
            <argument type="service" id="la_fourchette_adobe_client.creator.token"/>
        </service>

        <service id="la_fourchette_adobe_client.creator.client" class="LaFourchette\AdobeCampaignClientBundle\Client\ClientCreator">
            <argument type="service" id="la_fourchette_adobe_client.provider.token"/>
            <argument type="service" id="la_fourchette_adobe_client.instantiator.client"/>
        </service>
    </services>
</container>
